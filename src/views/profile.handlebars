<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: Arial, sans-serif;
    }
    
    #profile-editor {
      width: 100%;
      height: 100vh;
      display: flex;
      flex-direction: column;
    }
  </style>
</head>
<body>
  <input type="hidden" id="profile-username" value="{{user.username}}" />
  <input type="hidden" id="is-current-user" value="{{isCurrentUser}}" />
  <div id="profile-editor"></div>
  
  <script src="/public/js/components.js"></script>
  <script src="/public/js/editor.js"></script>
  <script src="/public/js/page-editor.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
  
  {{#if isCurrentUser}}
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('edit-toggle').addEventListener('click', function() {
        const editor = window.editor;
        const isEditMode = editor.state.getEditMode();
        editor.setMode(!isEditMode);
        this.textContent = !isEditMode ? 'Exit Edit Mode' : 'Enter Edit Mode';
      });
    });
  </script>
  {{/if}}
</body>
</html>