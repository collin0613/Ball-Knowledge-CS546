<div class="profile-container">
  <h1 class="profile-title">{{user.username}}'s Profile</h1>
  
  <div class="profile-card">
    <div class="profile-info">
      <p class="profile-detail"><strong>Username:</strong> {{user.username}}</p>
      <p class="profile-detail"><strong>Rank:</strong> {{user.rank}}</p>
      <p class="profile-detail"><strong>MMR:</strong> {{user.mmr}}</p>
      
      {{#if user.bio}}
        <div class="profile-bio">
          <h3>About Me</h3>
          <p>{{user.bio}}</p>
        </div>
      {{/if}}

      {{#if user.friends.length}}
        <div class="profile-friends">
          <h3>Friends:</h3>
          <ul class="profile-friends-list">
          {{#each user.friends}}
            <li class="usersFoundLI">
                <a href="/account/profile/{{this}}">{{this}}</a>
                {{!-- Could possibly include addFriend button here? not totally necessary though --}}

                {{!-- <form action="/account/addFriend" method="POST" class="addFriendForm">
                    <input type="hidden" name="friendUsername" value="{{this.username}}">
                    <button type="submit">Add Friend</button>
                </form> --}}
            </li>
          {{/each}}
          </ul>
        </div>
      {{/if}}
      
      <div class="profile-stats">
        <h3>Statistics</h3>
        <p><strong>Credit Balance:</strong> {{user.creditBalance}}</p>
        <p><strong>Total Picks:</strong> {{user.pickHistory.length}}</p>
      </div>
    </div>
  </div>
  
  <div class="navigation-links">
    <a href="/" class="nav-link">Back to Home</a>
    <a href="/leaderboard" class="nav-link">Leaderboard</a>
  </div>
</div>














<style>
  .profile-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .profile-title {
    text-align: center;
    margin-bottom: 20px;
  }
  
  .profile-card {
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
  
  .profile-info {
    margin-bottom: 20px;
  }
  
  .profile-detail {
    margin-bottom: 10px;
  }
  
  .profile-bio {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
  }
  
  .profile-stats {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
  }
  
  .navigation-links {
    margin-top: 20px;
    text-align: center;
  }
  
  .nav-link {
    display: inline-block;
    margin: 0 10px;
    padding: 8px 16px;
    background-color: #4285f4;
    color: white;
    text-decoration: none;
    border-radius: 4px;
  }
  
  .nav-link:hover {
